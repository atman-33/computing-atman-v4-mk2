{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["apps/web/components/*"],
      "@/data/*": ["apps/web/data/*"],
      "@/layouts/*": ["apps/web/layouts/*"],
      "@/styles/*": ["apps/web/styles/*"],
      "@libs/api/data-access-db": ["libs/api/data-access-db/src/index.ts"],
      "@libs/api/feature-image": ["libs/api/feature-image/src/index.ts"],
      "@libs/api/feature-sample": ["libs/api/feature-sample/src/index.ts"],
      "@libs/api/generated-db-types": ["libs/api/generated-db-types/src/index.ts"],
      "contentlayer/generated": ["./.contentlayer/generated"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
