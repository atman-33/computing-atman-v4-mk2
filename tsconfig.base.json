{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": [
      "es2020",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/components/*": [
        "apps/web/components/*"
      ],
      "@/config/*": [
        "apps/web/config/*"
      ],
      "@/constants/*": [
        "apps/web/constants/*"
      ],
      "@/features/*": [
        "apps/web/features/*"
      ],
      "@/hooks/*": [
        "apps/web/hooks/*"
      ],
      "@/lib/*": [
        "apps/web/lib/*"
      ],
      "@/stores/*": [
        "apps/web/stores/*"
      ],
      "@/styles/*": [
        "apps/web/styles/*"
      ],
      "@/types/*": [
        "apps/web/types/*"
      ],
      "@/utils/*": [
        "apps/web/utils/*"
      ],
      "@libs/api/feature-auth": [
        "libs/api/feature-auth/src/index.ts"
      ],
      "@libs/api/feature-image": [
        "libs/api/feature-image/src/index.ts"
      ],
      "@libs/api/prisma/data-access-db": [
        "libs/api/prisma/data-access-db/src/index.ts"
      ],
      "@libs/api/prisma/feature-sample-prisma": [
        "libs/api/prisma/feature-sample-prisma/src/index.ts"
      ],
      "@libs/api/prisma/generated-db-types": [
        "libs/api/prisma/generated-db-types/src/index.ts"
      ],
      "@libs/api/sites/booker/feature-bookmarks": [
        "libs/api/sites/booker/feature-bookmarks/src/index.ts"
      ],
      "@libs/api/sites/booker/feature-links": [
        "libs/api/sites/booker/feature-links/src/index.ts"
      ],
      "@libs/shared/config": [
        "libs/shared/config/src/index.ts"
      ],
      "@libs/web/data-access-graphql": [
        "libs/web/data-access-graphql/src/index.ts"
      ],
      "@libs/web/ui-shadcn": [
        "libs/web/ui-shadcn/src/index.ts"
      ],
      "@libs/web/ui-shadcn/lib/utils": [
        "libs/web/ui-shadcn/src/lib/utils.ts"
      ],
      "contentlayer/generated": [
        "./.contentlayer/generated"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}